<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_label_white_noborder" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <TextView
            android:id="@+id/frez_error_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:text="您的账户已经被冻结，暂时无法使用大象单车。"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/black_line"
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/frez_error_tip"
            android:layout_marginTop="5dp"
            android:background="@color/login_divider" />

        <TextView
            android:id="@+id/frez_comfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/black_line"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="确认"
            android:textColor="@color/font_sky_blue" 
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>