<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_label_white_noborder" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <TextView
            android:id="@+id/pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="如果在使用期间丢失单车，您需要赔偿200元，请再次确认单车已经丢失！"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/black_line"
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/pay_text"
            android:layout_marginTop="5dp"
            android:background="@color/login_divider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/black_line"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/confirm_lost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:text="确认丢失"
                android:textColor="@color/font_sky_blue"
                android:textSize="16dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1.0px"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/login_divider" />

            <TextView
                android:id="@+id/find_again"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:text="我再找找"
                android:textColor="@color/font_sky_blue"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>